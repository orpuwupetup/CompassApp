<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UserInputEditTextStyle">
        <item name="android:padding">@dimen/material_design_medium_padding_and_margin_size</item>
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
    </style>

    <style name="LatLongInputErrorTextStyle">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>
